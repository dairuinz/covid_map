<!----------------------------------------------------- BODY SIGN UP --------------------------------------------------------------------->

<body>
  <form action="/login" method="POST">

    <div class="position-absolute top-50 start-50 translate-middle">
      <div class="mx-auto" style="width: 700px;">
        <div class="shadow-lg p-3 mb-5 bg-body rounded">
          <div class="container">
            <section class="Form my-4 mx-5">
              <div class="col-lg-6">

                <form>
                  <div class="container" id="imgmove">
                    <img src="covid4.png" class="img-fluid">
                  </div>

                  <div class="container">
                    <div class="row">
                      <h2>Sign in</h2>
                    </div>
                  </div>

                  <div class="form-group row">

                    <div class="col-xs-1">
                      <div class="w-300 p-3" style="background-color:white">
                        <label for="ex1">Username</label>
                        <input type="username" class="form-control" id="username" name="username">

                      </div>
                    </div>

                    <div class="col-xs-3">
                      <div class="w-300 p-3" style="background-color: white;">
                        <label for="ex2">Password</label>
                        <input type="password" class="form-control" id="password" name="password">

                      </div>
                    </div>

                  </div>
                  <div class="text-center alert alert-light" role="alert">
                    <% if (messages.error) { %>
                    <%= messages.error %>
                    <% } %>
                  </div>

                  <!-- <button  id="loginBut" class="btn btn-primary" value="LogIn" >Log In</button> -->
                  <div class="text-center d-grid gap-2 d-md-block">
                    <button class="btn btn-outline-primary" type="submit">Login</button>
                  </div>

                  <div class="text-center d-grid gap-2 d-md-block">
                    <p> Don't have an account? <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal"> Sign up</a></p>

                  </div>


                </form>
              </div>
          </div>
        </div>
      </div>
    </div>
    </section>

    <!----------------------------------------- POP UP NEW USER------------------------------------------->

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">New user!</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>


          <!------------------------------------------------ NEW USER BODY ------------------------------------>
          <div class="modal-body">
            <form action="/register" method="POST">

              <div class="container">
                <div class="row">
                  <h2>Sign Up</h2>
                </div>
              </div>

              <div class="form-group row">

                <div class="col-xs-1">
                  <div class="w-300 p-3" style="background-color:white">
                    <label for="username">Username</label>
                    <input type="username" class="form-control" id="username" name="username">

                  </div>
                </div>

                <div class="col-xs-3">
                  <div class="w-300 p-3" style="background-color: white;">
                    <label for="mail">Email Address</label>
                    <input type="mail" class="form-control" id="mail" name="mail">
                  </div>
                </div>

                <!-----------------------------------------------PASSWORD ------------------------------------------------------->
                <div class="col-xs-3">
                  <div class="w-300 p-3" style="background-color: white;">

                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                  </div>
                </div>

                <div id="message" style="display: none;">
                  <h6>Password must contain the following:</h6>
                  <p id="letter" class="invalid"> A <b>lowercase</b> letter</p>
                  <p id="capital" class="invalid"> A <b>capital (uppercase)</b> letter</p>
                  <p id="number" class="invalid"> A <b>number</b></p>
                  <p id="length" class="invalid"> Minimum <b>8 characters</b></p>
                  <p id="special_char" class="invalid"> A <b>special character</b></p>
                </div>

                <!------------------------------------------CONFIRM PASSWORD--------------------------------------------------------------->

                <div class="col-xs-3">
                  <div class="w-300 p-3" style="background-color: white;">
                    <label for="for-confirmpass">Confirm Password</label>
                    <input class="form-control" id="passconfirm-modal" type="password" value="" name="samepasscheck">
                    <div id="conf-message" style="display: none;">
                      <h6>same password here</h6>
                    </div>
                  </div>
                </div>


              </div>

              <p> Return back to main Page<a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal"> Login Here</a></p>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                <button onclick="RegPass(pass_verifi,samepasscheck)" type="button" class="btn btn-primary">Save changes</button>
                <button class="btn btn-outline-primary" type="submit">Register</button>


              </div>
            </form>
          </div>

          <!-------------------------------------------------SIGN UP BUTTONS ------------------------------------------------------>



        </div>
      </div>
    </div>


    <script charset="utf-8" type="text/javascript" src="password_verification.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
  </form>
